
<p id="notice">
  <% flash.each do |key, value| %>
    <%= content_tag(:div, value, class: "#{key}") %>
  <% end %>
</p>


<% if customer_signed_in? %>
  <div class="red space_10">
    会員としてログインしています。</br>ログアウトをしてください。
  </div>
<% end %>

<div class="title">管理者ログイン</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<table class="no-deco">
  <tr>
    <th class="text-right-send">メールアドレス</th>
    <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
  </tr>
  <tr>
    <th class="text-right-send">パスワード</th>
    <td><%= f.password_field :password, autocomplete: "current-password" %></td>
  </tr>
  <tr>
    <th></th>
    <% if customer_signed_in? %>
    <% else %>
    <td><%= f.submit "ログイン", class: 'sp-font-12 btn btn-success' %></td>
    <% end %>
  </tr>
</table>

<% end %>

