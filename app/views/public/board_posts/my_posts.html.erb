
<div>

  <div>
    <div class="title">自分の投稿一覧(<%= @my_post.count %>件)</div>
    <table class="space_30">
      <thead>
        <tr>
          <th class="table-line">タイトル</th>
          <th class="table-line">本文</th>
          <th class="table-line">カテゴリ</th>
          <th class="table-line">※</th>
          <th colspan="1" class="table-line"></th>
          <th colspan="1" class="table-line"></th>
        </tr>
      </thead>
      <% @my_posts.each do |my_post| %>
      <tbody>
        <tr>
          <td class="table-line"><%= my_post.board_title %></td>
          <td class="table-line"><%= my_post.board_text.truncate(33) %></td>
          <td class="table-line"><%= my_post.large_category.name %></td>
          <td class="table-line"><%= my_post.comments.count %></td>
          <td class="table-line"><%= link_to "詳細", board_post_path(my_post.id), class: "btn btn-success btn-sm" %></td>
          <td class="table-line"><%= link_to "削除", board_post_path(my_post.id), method: :delete, class: "btn btn-danger btn-sm", "data-confirm" => "削除しますか？" %></td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>


</div>