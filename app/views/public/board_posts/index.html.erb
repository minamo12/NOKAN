

<div>掲示板一覧</div>

<div><%= link_to "投稿する", new_board_post_path %></div>

</br>

<div>

  <% @board_posts.each do |board_post| %>

  <%= link_to(board_post_path(board_post.id)) do %>

    <div>
      <label>タイトル</label>
      <div><%= board_post.board_title %></div>
    </div>

    <div>
      <label>作成日時</label>
      <div><%= board_post.created_at.strftime('%Y/%m/%d %H:%M') %></div>
    </div>

    <div>
      <label>本文</label>
      <div><%= board_post.board_text %></div>
    </div>

    <div>
      <label>ユーザ名</label>
      <div><%= board_post.customer.name %></div>
    </div>

    <div>
      <label>カテゴリ</label>
      <div><%= board_post.large_category.name %></div>
    </div>

    <% end %>

    <% end %>
</div>