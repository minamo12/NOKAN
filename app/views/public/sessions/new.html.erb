<div class="title">ログイン</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <table class="no-deco">
    <tr>
      <th class="text-right-send">ユーザ名</th>
      <td><%= f.text_field :name, autofocus: true, autocomplete: "name" %></td>
    </tr>
    <tr>
      <th class="text-right-send">パスワード</th>
      <td><%= f.password_field :password, autocomplete: "new-password" %></td>
    </tr>
    <tr>
      <th></th>
      <td><%= f.submit "ログイン", class: 'btn btn-success' %></td>
    </tr>
    <tr>
      <th></th>
      <td>新規登録は　<%= render "public/shared/links" %>　から</td>
    </tr>
  </table>

<% end %>