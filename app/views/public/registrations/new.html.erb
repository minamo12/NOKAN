<div class="title">新規会員登録</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <table class="no-deco">
    <tr>
      <th class="text-right-send">ユーザ名</th>
      <td><%= f.text_field :name, autofocus: true, autocomplete: "name" %></td>
    </tr>
    <tr>
      <th class="text-right-send">パスワード</th>
      <td><%= f.password_field :password, autocomplete: "new-password" %></td>
    </tr>
    <tr>
      <th class="text-right-send">パスワード(確認用)</th>
      <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
    </tr>
    <tr>
      <th></th>
      <td><%= f.submit "新規登録", class: 'btn btn-success' %></td>
    </tr>
    <tr>
      <th></th>
      <td>すでに登録済みの方は　<%= render "public/shared/links" %>　から</td>
    </tr>
  </table>

<% end %>