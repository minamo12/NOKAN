

<div class="flex space_50 width-100p">

  <!--模試履歴-->
<div class="">
  <div class="title">模試履歴</div>

  <% if @mock_exams.count == 0 %>
  <div>まだ模試履歴がありません。</div>

  <% else %>
  <div>
    <table class="text-center space_30">
      <thead>
        <tr>
          <th class="outline">日時</th>
          <th class="outline font-15">カテゴリ</th>
          <th class="outline">正解数</th>
          <th colspan="1" class="outline"></th>
        </tr>
      </thead>
      <% @mock_exams.take(5).each do |mock_exam| %>
      <tbody>
        <tr>
          <td class="outline"><%=mock_exam.created_at.strftime('%Y/%m/%d %H:%M') %></td>
          <td class="outline">
            <% mock_exam.answers.take(1).each do |answer| %>
              <%= answer.quiz.item.large_category.name %>
            <% end %>
          </td>
          <td class="outline">
            <span><%= mock_exam.point %></span>
            <span class="font-12">/40</span>
          </td>
          <td class="outline"><%= link_to "詳細", mock_exam_path(mock_exam.id), class: "btn btn-success btn-sm" %></td>
        </tr>
      </tbody>
      <% end %>
    </table>
    <div class="text-right-send"><%= link_to "模試履歴一覧を見る", mock_exams_path, class: "btn btn-primary" %></div>
  </div>
  <% end %>
</div>
