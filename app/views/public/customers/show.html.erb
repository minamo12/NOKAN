<div class="">
  <div class="left-space-80 font-25">
    会員情報を変更する
    <%= link_to(edit_customer_path(@customer.id)) do %>
    <span>
      <i class="fa-solid fa-arrow-right"></i>
    </span>
    <% end %>
  </div>
  <div><i class="fa-regular fa-square-arrow-right"></i></div>
</div>

</div>


<!--自分の投稿一覧-->
<div class="width-70p">

<div class="space_50">
<div class="title">自分の投稿一覧</div>

<% if @board_posts.count == 0 %>
<div>まだ投稿していません。</div>

<% else %>
<div>
  <table class="space_30 width-100p">
    <thead>
      <tr>
        <th class="outline">タイトル</th>
        <th class="outline">本文</th>
        <th class="outline">カテゴリ</th>
        <th class="outline">投稿日時</th>
        <th class="outline">※</th>
        <th colspan="1" class="outline"></th>
      </tr>
    </thead>
    <% @board_posts.take(5).each do |board_post| %>
    <tbody>
      <tr>
        <td class="outline"><%= board_post.board_title %></td>
        <td class="outline"><%= board_post.board_text.truncate(13) %></td>
        <td class="outline"><%= board_post.large_category.name %></td>
        <td class="outline"><%= board_post.created_at.strftime('%Y/%m/%d %H:%M') %></td>
        <td class="outline"><%= board_post.comments.count %></td>
        <td class="outline"><%= link_to "詳細", board_post_path(board_post.id), class: "btn btn-success btn-sm" %></td>
      </tr>
    </tbody>
    <% end %>
  </table>
  <div class="text-right-send"><%= link_to "自分の投稿一覧を見る", board_post_my_posts_path, class: "btn btn-primary" %></div>
</div>
<% end %>
</div>
</div>
<!---->


<!--自分のコメント一覧-->
<div class="width-70p">

<div>
<div class="title">自分のコメント一覧</div>

<% if @comments.count == 0 %>
<div>まだコメントをしていません</div>

<% else %>
<div>
  <table class="space_30 width-100p">
    <thead>
      <tr>
        <th class="outline">コメント文</th>
        <th class="outline">日時</th>
        <th class="outline">タイトル</th>
        <th class="outline">ユーザ名</th>
        <th class="outline">カテゴリ</th>
        <th colspan="1" class="outline"></th>
      </tr>
    </thead>
    <% @comments.take(5).each do |comment| %>
    <tbody>
      <tr>
        <td class="outline"><%= comment.comment_text.truncate(13) %></td>
        <td class="outline"><%= comment.created_at.strftime('%Y/%m/%d %H:%M') %></td>
        <td class="outline"><%= comment.board_post.board_title %></td>
        <td class="outline"><%= comment.board_post.customer.name %></td>
        <td class="outline"><%= comment.board_post.large_category.name %></td>
        <td class="outline"><%= link_to "詳細", board_post_path(comment.board_post.id), class: "btn btn-success btn-sm" %></td>
      </tr>
    </tbody>
    <% end %>
  </table>
  <div class="text-right-send"><%= link_to "自分のコメント一覧を見る", comment_my_comments_path, class: "btn btn-primary" %></div>
</div>

<% end %>
</div>
</div>
