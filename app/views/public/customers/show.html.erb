

<div class="flex">

<!--模試履歴-->
<div class="width-40p">
  <div class="title">模試履歴</div>
  <table class="text-center space_30 width-100p">
    <thead>
      <tr>
        <th class="table-line width-40p">日時</th>
        <th class="table-line width-20p font-15">カテゴリ</th>
        <th class="table-line">正解数</th>
        <th colspan="1" class="table-line"></th>
      </tr>
    </thead>
    <% @mock_exams.take(5).each do |mock_exam| %>
    <tbody>
      <tr>
        <td class="table-line"><%=mock_exam.created_at.strftime('%Y/%m/%d %H:%M') %></td>
        <td class="table-line">
          <% mock_exam.answers.take(1).each do |answer| %>
            <%= answer.quiz.item.large_category.name %>
          <% end %>
        </td>
        <td class="table-line">
          <span><%= mock_exam.point %></span>
          <span class="font-12">/40</span>
        </td>
        <td class="table-line"><%= link_to "詳細", mock_exam_path(mock_exam.id), class: "btn btn-success btn-sm" %></td>
      </tr>
    </tbody>
    <% end %>
  </table>
  <div class="text-right-send"><%= link_to "模試履歴一覧を見る", mock_exams_path, class: "btn btn-primary" %></div>
</div>


<div>
  <div class="left-space-80 font-25">
    会員情報を変更する
    <%= link_to(edit_customer_path(@customer.id)) do %>
    <span>
      <i class="fa-solid fa-arrow-right"></i>
    </span>
    <% end %>
  </div>
  <div><i class="fa-regular fa-square-arrow-right"></i></div>
</div>

</div>


<!--自分の投稿一覧-->
<div>
  <div class="title">自分の投稿一覧</div>
  <table class="space_30">
    <thead>
      <tr>
        <th class="table-line">タイトル</th>
        <th class="table-line">本文</th>
        <th class="table-line">カテゴリ</th>
        <th class="table-line">投稿日時</th>
        <th class="table-line">※</th>
        <th colspan="1" class="table-line"></th>
      </tr>
    </thead>
    <% @board_posts.take(5).each do |board_post| %>
    <tbody>
      <tr>
        <td class="table-line"><%= board_post.board_title %></td>
        <td class="table-line"><%= board_post.board_text.truncate(13) %></td>
        <td class="table-line"><%= board_post.large_category.name %></td>
        <td class="table-line"><%= board_post.created_at.strftime('%Y/%m/%d %H:%M') %></td>
        <td class="table-line"><%= board_post.comments.count %></td>
        <td class="table-line"><%= link_to "詳細", board_post_path(board_post.id), class: "btn btn-success btn-sm" %></td>
      </tr>
    </tbody>
    <% end %>
  </table>
  <div><%= link_to "自分の投稿一覧を見る", board_post_my_posts_path, class: "btn btn-primary" %></div>
</div>


<!--自分のコメント一覧-->
<div>
  <div class="title">自分のコメント一覧</div>
  <table>
    <thead>
      <tr>
        <th class="table-line">コメント文</th>
        <th class="table-line">日時</th>
        <th class="table-line">タイトル</th>
        <th class="table-line">ユーザ名</th>
        <th class="table-line">カテゴリ</th>
        <th colspan="1" class="table-line"></th>
      </tr>
    </thead>
    <% @comments.take(5).each do |comment| %>
    <tbody>
      <tr>
        <td class="table-line"><%= comment.comment_text.truncate(13) %></td>
        <td class="table-line"><%= comment.created_at.strftime('%Y/%m/%d %H:%M') %></td>
        <td class="table-line"><%= comment.board_post.board_title %></td>
        <td class="table-line"><%= comment.board_post.customer.name %></td>
        <td class="table-line"><%= comment.board_post.large_category.name %></td>
        <td class="table-line"><%= link_to "詳細", board_post_path(comment.board_post.id), class: "btn btn-success btn-sm" %></td>
      </tr>
    </tbody>
    <% end %>
  </table>
  <div><%= link_to "自分のコメント一覧を見る", comment_my_comments_path, class: "btn btn-primary" %></div>
</div>


