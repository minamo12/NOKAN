
<div class="title">模試履歴一覧</div>

<% if @mock_exams.count == 0 %>

<div>まだ模試履歴がありません。</div>

<% else %>

<table>
  <thead>
    <tr class="text-center">
      <th class="outline">日時</th>
      <th class="outline">カテゴリ</th>
      <th class="outline">正解数</th>
      <th colspan="1" class="outline"></th>
      <th colspan="1" class="outline"></th>
    </tr>
  </thead>
  <% @mock_exams.each do |mock_exam| %>
  <tbody>
    <tr>
      <td class="outline"><%= mock_exam.created_at.strftime('%Y/%m/%d %H:%M') %></td>
      <td class="outline">
        <% mock_exam.answers.take(1).each do |answer| %>
          <%= answer.quiz.item.large_category.name %>
        <% end %>
      </td>
      <td class="outline"><%= mock_exam.point %> /40</td>
      <td class="outline"><%= link_to "詳細", mock_exam_path(mock_exam.id), class: "btn btn-success btn-sm" %></td>
      <td class="outline"><%= link_to "削除", mock_exam_path(mock_exam.id), method: :delete, "data-confirm" => "削除しますか？", class: "btn btn-danger btn-sm" %></td>
    </tr>
  </tbody>
  <% end %>
</table>

<div>

<% end %>