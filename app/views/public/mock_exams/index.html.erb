
<div>模試履歴一覧</div>


<table>
  <thead>
    <tr>
      <th class="table-line">日時</th>
      <th class="table-line">カテゴリ</th>
      <th class="table-line">正解数</th>
      <th colspan="1" class="table-line"></th>
      <th colspan="1" class="table-line"></th>
    </tr>
  </thead>
  <% @mock_exams.each do |mock_exam| %>
  <tbody>
    <tr>
      <td class="table-line"><%= mock_exam.created_at.strftime('%Y/%m/%d %H:%M') %></td>
      <td class="table-line">
        <% mock_exam.answers.take(1).each do |answer| %>
          <%= answer.quiz.item.large_category.name %>
        <% end %>
      </td>
      <td class="table-line"><%= mock_exam.point %> /40</td>
      <td class="table-line"><%= link_to "詳細", mock_exam_path(mock_exam.id), class: "btn btn-success btn-sm" %></td>
      <td class="table-line"><%= link_to "削除", mock_exam_path(mock_exam.id), method: :delete, "data-confirm" => "削除しますか？", class: "btn btn-danger btn-sm" %></td>
    </tr>
  </tbody>
  <% end %>
</table>

