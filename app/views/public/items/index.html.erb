
<div>
  <% @items.take(1).each do |item| %>
    <%= link_to item.large_category.name, categories_path(large_category_id: item.large_category.id) %> >
    <%= item.medium_category.name %> >
    <%= item.small_category.name %>
  <% end %>
</div>

<div>

  <table>

    <thead>
      <tr class="text-center border-bottom">
        <th>項目</th>
        <th>説明</th>
        <th>解説</th>
        <th>画像</th>
      </tr>
    </thead>

    <% @items.order(:reading).each do |item| %>
    <tbody>
      <tr class="border-bottom">
        <td><%= link_to item.name, item_path(item.id) %></td>
        <td><%= item.information.truncate(13) %></td>
        <td><%= item.commentary.truncate(13) %></td>
        <td>
          <div class="item-index-image"><%= image_tag item.get_image(80, 80) %></div>
          <div class="item-index-pop-up"><%= image_tag item.get_image(200, 200) %></div>
        </td>
      </tr>
    </tbody>

    <% end %>
  </table>

</div>